<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_marginRight="10dp"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/helpText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/help"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/N"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/N"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/contactN1"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/degreN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degre"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/contactN2"
            android:layout_width="101dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/pointN"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/contactN3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="10dp" >

        <TextView
            android:id="@+id/W"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/W"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/contactW1"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/degreW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/degre"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/contactW2"
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/pointW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/point"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/contactW3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ems="10"
            android:inputType="numberDecimal" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonValidate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:onClick="search"
        android:text="Search" />

</LinearLayout>